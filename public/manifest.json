{
  "manifest_version": 3,

  "name": "Social Comments GPT",
  "description": "Create engaging comments on social media, powered by ChatGPT.",
  "version": "1.0",

  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "action": {
    "default_icon": "action-icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "include_globs": ["*://*.linkedin.com/*", "*://*.instagram.*/*"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "permissions": ["storage"],

  "host_permissions": ["<all_urls>"]
}
